










@{
    ViewData["Title"] = "Edit Shift";
    Layout = "_Layout";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Cloudscribe.Web.Pagination

@model hospitalVm.DoctorVm




<style>
    /* Custom CSS styles */
    .container {
        text-align: center;
    }

    h1 {
        margin-bottom: 20px;
    }

    body {
        background-image: url('/Images/hospital11.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }

    /* Glass-like style for form elements */
    .glass-container {
        background-color: rgba(255, 255, 255, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 20px;
        padding: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        color: black;
    }

    .glass-input {
        background-color: rgba(255, 255, 255, 0.2);
        border: none;
        border-radius: 5px;
        padding: 5px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
    }

    /* Style for the button group */
    .button-group {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .button-group .btn {
        margin: 0;
    }
</style>

<div class="container mt-5 glass-container col-md-7">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <h1>Edit Doctor</h1>

            <form asp-action="Save" method="post" id="saveform" enctype="multipart/form-data">
                <input type="hidden" asp-for="id" />

                <div class="form-group glass-input">
                    <label asp-for="username">Username:</label>
                    <input asp-for="username" class="form-control" />
                </div>

                <div class "form-group glass-input">
                    <label asp-for="City">City:</label>
                    <input asp-for="City" class="form-control" />
                </div>

                <div class="form-group glass-input">
                    <label asp-for="imgurlupdated">Update Image URL:</label>
                    <input asp-for="imgurlupdated" class="form-control" />
                </div>

                <div class="form-group glass-input">
                    <label asp-for="Contracturluplod">Add Contract URL:</label>
                    <input asp-for="Contracturluplod" class="form-control" />
                </div>

                <!-- Add other fields with glass-input style -->
                <div class="form-group glass-input">
                    <label asp-for="Nationality">Nationality:</label>
                    <input asp-for="Nationality" class="form-control" />
                </div>

                <div class="form-group glass-input">
                    <label asp-for="StreetAddress">Street Address:</label>
                    <input asp-for="StreetAddress" class="form-control" />
                </div>

                <div class="form-group glass-input">
                    <label asp-for="PostalCode">Postal Code:</label>
                    <input asp-for="PostalCode" class="form-control" />
                </div>
                
                <div class="form-group glass-input">
                    <label asp-for="Email">Email:</label>
                    <input asp-for="Email" class="form-control" />
                </div>

                <div class="form-group glass-input">
                    <label asp-for="Phonenumber">Phone Number:</label>
                    <input asp-for="Phonenumber" class="form-control" />
                </div>

                <div class="form-group glass-input">
                    <label asp-for="Dateofbarth">Date of Birth:</label>
                    <input asp-for="Dateofbarth" class="form-control" />
                </div>

                <!-- Add more fields as needed -->

                <div class="button-group">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-controller="Doctor" asp-action="Index" class="btn btn-secondary mt-2">
                        <i class="fas fa-chevron-circle-left"></i> Back to Index
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
