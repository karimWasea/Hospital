@model IEnumerable<hospitalVm.DoctorVm>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Cloudscribe.Web.Pagination

@{
    ViewData["Title"] = "GetRegisterdoctor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    body {
        background-image: url('/Images/hospital11.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>
<div class="container mt-8">
    <h1>Registered Doctors</h1>

    <div class="table-responsive">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Username</th>
                    <th>Phone Number</th>
                    <th>Specialist</th>
                    <th>Gender</th>
                    <th>Nationality</th>
                    <th>City</th>
                    <th>Street Address</th>
                    <th>Date of Birth</th>
                    <th>Email</th>
                    <th>Status in System</th>
                    <th>Image</th>
                    <th>Action</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hospital in Model)
                {
                    <tr>
                        <td>@hospital.username</td>
                        <td>@hospital.Phonenumber</td>
                        <td>@hospital.spicialist</td>
                        <td>@hospital.Gender</td>
                        <td>@hospital.Nationality</td>
                        <td>@hospital.City</td>
                        <td>@hospital.StreetAddress</td>
                        <td>@hospital.Dateofbarth</td>
                        <td>@hospital.Email</td>
                        <td>@hospital.StatusDoctorInSystem</td>
                        <td>
                            <img class="rounded-circle img-fluid" src="@hospital.imphgurl" alt="@hospital.username" width="50">
                        </td>
                        <td>
                            <a asp-controller="Doctor" asp-action="Save" asp-route-id="@hospital.id" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-controller="Doctor" asp-action="Delete" asp-route-id="@hospital.id" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                          
                        </td> 
                        <td>
                            <a asp-controller="Doctor" asp-action="Details" asp-route-id="@hospital.id" class="btn btn-sm btn-info">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


<script>
    document.addEventListener('DOMContentLoaded', function () {
        const updateButton = document.getElementById('updateButton');
        const deleteButton = document.getElementById('deleteButton');
        const addButton = document.getElementById('addButton');

        // Update action
        updateButton.addEventListener('click', function () {
            Swal.fire({
                title: 'Update Confirmation',
                text: 'Are you sure you want to update this item?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, update it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Call your update function here
                    // For example: updateItem(itemId);
                    Swal.fire('Updated!', 'The item has been updated.', 'success');
                }
            });
        });

        // Delete action
        deleteButton.addEventListener('click', function () {
            Swal.fire({
                title: 'Delete Confirmation',
                text: 'Are you sure you want to delete this item?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Call your delete function here
                    // For example: deleteItem(itemId);
                    Swal.fire('Deleted!', 'The item has been deleted.', 'success');
                }
            });
        });

        // Add action
        addButton.addEventListener('click', function () {
            Swal.fire({
                title: 'Add Confirmation',
                text: 'Are you sure you want to add a new item?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'Yes, add it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Call your add function here
                    // For example: addItem();
                    Swal.fire('Added!', 'A new item has been added.', 'success');
                }
            });
        });
    });

</script>


