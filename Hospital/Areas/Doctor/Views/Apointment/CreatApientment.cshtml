@{
    ViewData["Title"] = "Save";
    Layout = "_Layout";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Cloudscribe.Web.Pagination

@model hospitalVm.ApointmentVm
<link href="~/css/creatappientment.css" rel="stylesheet" />
<div class="container mt-5 glass-container col-md-7">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <h1>New Appointment</h1>

            <form asp-action="Save" method="post" id="saveform">
                <input type="hidden" asp-for="id" />
                <input type="hidden" asp-for="doctorid" />
                <div class="form-row">
                    <div class="form-group glass-input col-6">
                        <label asp-for="DoctorName">Doctor Name:</label>
                        <p class="form-control-static">@Model.DoctorName</p>
                    </div>

                    <div class="form-group glass-input col-5">
                        <label asp-for="discreaption">Description:</label>
                        <input asp-for="discreaption" class="form-control" />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group glass-select col-6">
                        <label asp-for="CreateDate">Appointment Time</label>
                        <select asp-for="CreateDate" class="form-control">
                            <option value="">Select a time slot</option>
                            @foreach (var slot in ViewBag.availableSlots)
                            {
                                <option value="@slot.Value">@slot.Text</option>
                            }
                        </select>
                    </div>

                    <div class="form-group glass-select col-md-5">
                        <label asp-for="VisitType">About your Visit</label>
                        <select asp-for="VisitType" class="form-control">
                            <option value="">Select a visit type</option>
                            @foreach (var slot in ViewBag.Visitetype)
                            {
                                <option value="@slot.Value">@slot.Text</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="button-group">
                    <button type="submit" id="savedata" class="btn btn-primary">
                        Add New
                    </button>
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-2">
                        <i class="fas fa-chevron-circle-left"></i> Back to Index
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts{
    <!-- Include SweetAlert CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.min.css">

    <!-- Include SweetAlert JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.all.min.js"></script>

    <<script src="~/js/creatappiontmentdate.js"></script>
}