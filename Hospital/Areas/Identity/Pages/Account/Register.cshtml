@page
@using hospitalUtilities.SystemEnums

@model RegisterModel 
@{
    ViewData["Title"] = "Register";
}



@{
    ViewData["Title"] = "Register Doctor";
}
<h1>@ViewData["Title"]</h1>
<link href="~/css/regester.css" rel="stylesheet" />

<partial name="_AlertMessage" model="Model" />
<div class="container mt-5 glass-container" style="width:80%; height:80%;">

    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="glass-form" enctype="multipart/form-data">

        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-row">

        <div class="form-group col-md-4">

                <input asp-for="Input.Email" class="glass-input form-control" placeholder=" inter Email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

            <div class="form-group col-md-4">

                <input asp-for="Input.Nationality" class="glass-input form-control" placeholder=" inter Narionality" />
                <span asp-validation-for="Input.Nationality" class="text-danger"></span>
            </div>
       


        </div>



        <div class="form-row">
            <div class="form-group col-md-4">

                <input asp-for="Input.Usename" class="glass-input form-control" placeholder=" inter Usename" />
                <span asp-validation-for="Input.Usename" class="text-danger"></span>
            </div>

            <div class="form-group col-md-4">

                <input asp-for="Input.Phonnumber" class="glass-input form-control" placeholder="Inter Phonnumber" />
                <span asp-validation-for="Input.Phonnumber" class="text-danger"></span>
            </div>
        </div>


        <div class="form-row">
            <div class="form-group col-md-4">

                <input asp-for="Input. StreetAddress" class="glass-input form-control" placeholder=" inter Adress street" />
                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
            </div>

            <div class="form-group col-md-4">

                <input asp-for="Input.dateofbarth" class="glass-input form-control" placeholder=" inter date of Barth" />
                <span asp-validation-for="Input.dateofbarth" class="text-danger"></span>
            </div>
        </div>


        <div class="form-row">
            <div class="form-group col-md-4">

                <input asp-for="Input.imphgurl" class="glass-input form-control" placeholder=" inter imge" />
                <span asp-validation-for="Input.imphgurl" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <input asp-for="Input.ConfirmPassword" class="glass-input form-control" autocomplete="new-password" aria-required="true" placeholder="password" />

                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        

        </div>

        <div class="form-row">

          
            <div class="form-group col-md-4">
                <input asp-for="Input.Password" class="glass-input form-control" autocomplete="new-password" aria-required="true" placeholder="password" />

                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    
                    <select asp-for="  Input.RoleRegeseter" asp-items="@Html.GetEnumSelectList<RoleRegeseter>()" aria-required="true" class="glass-input form-control" placeholder="RoleRegeseter">
                        <option value="">-- Select RoleRegeseter --</option>
                    </select>
                    <span asp-validation-for="Input.RoleRegeseter" class="text-danger"></span>
                </div>




            </div>
        </div>

        <div class="form-row">





            <div class="col-md-4">
                <div class="form-group">

                    <select asp-for="  Input.spicialist" asp-items="@Html.GetEnumSelectList<spicialist>()" aria-required="true" class=" glass-input form-control" placeholder="spicialist">


                    <option value="">
                        select spicialist
                    </option>
                </select>
                <span asp-validation-for="Input.spicialist" class="text-danger"></span>

            </div>
            </div>




            <div class="col-md-4">

                    <div class="form-group">

                        <select asp-for="Input.Gender" asp-items="@Html.GetEnumSelectList<Gender>()"
                            aria-required="true" class="glass-input form-control" placeholder="Gender">
                            <option
                         
                                value="" >Choose gender</option>
                        </select>
                        <span asp-validation-for="Input.Gender" class="text-danger"></span>

                </div>
                </div>
        </div>





        <div class="row mt-8">
            <div class="form-group col-md-6">
                <button type="submit" id="savedata" class="btn btn-primary">Update</button>
            </div>
            <div class="form-group col-md-6 text-right">
                <a asp-controller="Admim" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-chevron-circle-left"></i> Back to Index
                </a>
            </div>
        </div>



    </form>
</div>











@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script><script src="~/js/regester.js"></script>
    <partial name="_ValidationScriptsPartial" />
}
 