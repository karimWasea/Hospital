@page
@using hospitalUtilities.SystemEnums
@model RegisterModelpatient
@{
    ViewData["Title"] = "Register Patient";
}
<h1>@ViewData["Title"]</h1>
<link href="~/css/patientregester.css" rel="stylesheet" />


<partial name="_AlertMessage" model="Model" />
<div class="container mt-5 glass-container">

    <form id="registerForm" 
        asp-route-returnUrl="@Model.ReturnUrl" method="post" class="glass-form" enctype="multipart/form-data">

        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-group col-md-5">
            <input asp-for="Input.Email" class="glass-input form-control" placeholder="Email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-row">
            <div class="form-group col-md-5">
                
                <input asp-for="Input.Usename" class="glass-input form-control" placeholder="Usename" />
                <span asp-validation-for="Input.Usename" class="text-danger"></span>
            </div>

            <div class="form-group col-md-5">
                
                <input asp-for="Input.Phonnumber" class="glass-input form-control" placeholder="Phonnumber" />
                <span asp-validation-for="Input.Phonnumber" class="text-danger"></span>
            </div>
        </div>


        <div class="form-row">
            <div class="form-group col-md-5">
              
                <input asp-for="Input. StreetAddress" class="glass-input form-control" placeholder="StreetAddress" />
                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
            </div>

            <div class="form-group col-md-5">
        
                <input asp-for="Input.dateofbarth" class="glass-input form-control" placeholder="StreetAddress" />
                <span asp-validation-for="Input.dateofbarth" class="text-danger"></span>
            </div>
        </div>


        <div class="form-row">
            <div class="form-group col-md-5">
              
                <input asp-for="Input.imphgurl" class="glass-input form-control" placeholder="imphgurlimphgurl" />
                <span asp-validation-for="Input.imphgurl" class="text-danger"></span>
            </div>

            <div class="form-group col-md-5">
            
                <input asp-for="Input.City" class="glass-input form-control" placeholder="City" />
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">

            <div class="form-group col-md-5">
                <input asp-for="Input.ConfirmPassword" class="    glass-input form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <input asp-for="Input.Password" class="form-control     glass-input" autocomplete="new-password" aria-required="true" placeholder="password" />
           
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-5">
         
                <input asp-for="Input.Nationality" class="glass-input form-control" placeholder="Nationality" />
                <span asp-validation-for="Input.Nationality" class="text-danger"></span>
            </div>






            <div class="form-group col-md-5">
                <div class="col-md-6">
                    <div class="form-group">
               
                        <select asp-for="Input.Gender" asp-items="@Html.GetEnumSelectList<Gender>()"
                                aria-required="true" class="    glass-input form-control" placeholder="Nationality">
                            <option value="" disabled>Choose gender</option>
                        </select>
                        <span asp-validation-for="Input.Gender" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
      
        <div class="row mt-3">
            <div class="form-group col-md-6">
                <button type="submit" id="savedata" class="btn btn-primary">Update</button>
            </div>
            <div class="form-group col-md-6 text-right">
                <a asp-controller="Admim" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-chevron-circle-left"></i> Back to Index
                </a>
            </div>
        </div>
    </form>
</div>







@section Scripts {
    <script src="~/js/patientregester.js"></script>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <partial name="_ValidationScriptsPartial" />
}
