@page
@model RegisterModelpatient
@{
    ViewData["Title"] = "Register";
}
<style>
    /* Add CSS styles for the background image */
    body {
        background-image: url('/Images/images (3).jpeg');
        background-size:cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    /* Add other CSS styles here if needed */
</style>
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

            </div>



            <div class="form-floating mb-3">
                <input asp-for="Input.Usename" class="form-control" autocomplete="Usename" aria-required="true" placeholder="Usename" />
                <label asp-for="Input.Usename">Name</label>
                <span asp-validation-for="Input.Usename" class="text-danger"></span>

            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Phonnumber" class="form-control" autocomplete="Usename" aria-required="true" placeholder="Phonnumber" />
                <label asp-for="Input.Phonnumber"> Phonnumber</label>
                <span asp-validation-for="Input.Phonnumber" class="text-danger"></span>

            </div>





            <div class="form-floating mb-3">
                <input asp-for="Input.City" class="form-control" autocomplete="City" aria-required="true" placeholder="City" />
                <label asp-for="Input.City"> City</label>
                <span asp-validation-for="Input.City" class="text-danger"></span>

            </div>
        



            <div class="form-floating mb-3">
                <input asp-for="Input.Nationality" class="form-control" autocomplete="City" aria-required="true" placeholder="Nationality" />
                <label asp-for="Input.Nationality"> Nationality</label>
                <span asp-validation-for="Input.Nationality" class="text-danger"></span>

            </div>



            <div class="form-floating mb-3">
                <input asp-for="Input.StreetAddress" class="form-control" autocomplete="StreetAddress" aria-required="true" placeholder="StreetAddress" />
                <label asp-for="Input.StreetAddress"> StreetAddress</label>
                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>

            </div>
            <label asp-for="Input.imphgurl"> img</label>

            <div class="form-floating mb-3">

                <input asp-for="Input.imphgurl" class="form-control" autocomplete="imphgurl" aria-required="true"  />
                <span asp-validation-for="Input.imphgurl" class="text-danger"></span>

            </div>
              
            <div class="form-floating mb-3">
                <input asp-for="Input.dateofbarth" class="form-control" autocomplete="dateofbarth" aria-required="true" placeholder="dateofbarth" />
                <label asp-for="Input.dateofbarth"> dateofbarth</label>
                <span asp-validation-for="Input.dateofbarth" class="text-danger"></span>

            </div>








            <label asp-for="Input.Gender"></label>

            <div class="form-floating mb-3">

                <select asp-for="Input.Gender" asp-items="@Html.GetEnumSelectList<Gender>()"
                        aria-required="true" class="form-control">
                    <option value="" disabled>Choose gender</option>
                </select>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>



