@model PagedList.IPagedList<hospitalVm.ApointmentVm>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewData["Title"] = "All Patients";
}

<partial name="_AlertMessage" />

<link href="~/css/contactindex.css" rel="stylesheet" />

<form id="search-form" method="get" >

    <input type="text" name="search" value="@ViewBag.Search" placeholder="Search..." id="search-input" class="form-control">
</form>


<table class="table table-bordered table-hover table-success">
    <thead>
        <tr>
            <th>Visit Date</th>
            <th>Doctor Name</th>
            <th>Visit Status</th>
            <th>Visit Type</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody id="patientTableBody">
        @foreach (var patient in Model)
        {
            <tr id="@patient.doctorid" class="row-style" data-visit-id="@patient.DoctorAppointmentVIsitid">
                <td>@patient.CreateDate</td>
                <td>@patient.DoctorName</td>
                <td class="visit-status-cell">@patient.VisitStatus</td>
                <td>@patient.VisitType</td>
                <td>
                    <a asp-controller="Appiontmentvisite"
                       asp-action="Details"
                       asp-route-DoctorAppointmentVIsitid="@patient.DoctorAppointmentVIsitid"
                       class="btn btn-sm btn-primary" style="background-color: #your_color;">
                        <i class="fas fa-info-circle" title="Details"></i>
                    </a>
                    <a asp-area="Doctor"
                       asp-controller="PatientReport"
                       asp-action="Save"
                       asp-route-patientid="@patient.patientid"
                       asp-route-DoctorAppointmentVIsitid="@patient.DoctorAppointmentVIsitid"
                       class="btn btn-sm btn-info" style="background-color: #your_color;">
                        Patient Report
                    </a>
                    <a asp-route-PatientId="@patient.patientid"
                       asp-area="Patient"
                       asp-controller="PatientHistory"
                       asp-action="GetALLpatientHistory"
                       id="Add"
                       class="btn btn-sm btn-success" style="background-color: #your_color;">
                        Get ALL Patient History
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script>
        // Update table visibility based on search input
        function updateTableVisibility(searchTerm) {
            const rows = document.querySelectorAll(".row-style");
            rows.forEach(row => {
                const doctorNameCell = row.querySelector("td:nth-child(2)"); // Adjust this selector as needed
                if (doctorNameCell.textContent.toLowerCase().includes(searchTerm.toLowerCase())) {
                    row.style.display = "table-row";
                } else {
                    row.style.display = "none";
                }
            });
        }

        const searchInput = document.getElementById("search-input");
        searchInput.addEventListener("input", function () {
            updateTableVisibility(this.value);
        });
    </script>
}
