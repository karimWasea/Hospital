@using Dataaccesslayer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "addRoles";
    Layout = "_Layout";
}

@model IEnumerable<hospitalVm.RoleViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<link href="~/css/hospitalindex.css" rel="stylesheet" />


@*<partial name="_AlertMessage" />
*@<form method="post">
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">User Role</h2>
                <h3 style="display:none;">ViewBag.userName</h3>
            </div>
        </div>

        <input hidden id="userName" name="userName" value="@ViewBag.userName" />
        <input hidden id="userId" name="userId" value="@ViewBag.userId" />
        <input hidden id="jsonRoles" name="jsonRoles" />


        <table id="roleTable" class="table table-bordered table-hover table-success
            table-bordered">
    <thead>
            <thead>
                <tr>
                    <th scope="col" class="bg-primary text-light">
                        Role Id
                    </th>
                    <th scope="col" class="bg-primary text-light">
                        Role Name
                    </th>
                    <th scope="col" class="bg-primary text-light">
                        AddRole
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-primary">
                        <td scope="row" class="tId     " width="30%">
                            @item.roleId
                        </td>
                        <td class="tName ">
                            @item.roleName
                        </td>
                        <td>
                            <input type="checkbox" class="btn btn-primary tCheck" @(item.useRole ? "checked" : "") />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <button type="submit" onclick="updateJsonFile()" class="btn btn-primary" style="width:150px">Save</button>
</form>









@section Scripts {



    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.0/css/jquery.dataTables.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/1.11.0/js/jquery.dataTables.min.js"></script>
