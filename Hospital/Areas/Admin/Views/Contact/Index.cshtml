@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

   @using hospitalUtilities 

@model PagedREsult<hospitalVm.ContactVm>

@{
    Layout = "_Layout";
    ViewData["Title"] = "All Contacts";
}
<partial name="_AlertMessage" />

<h2>@ViewData["Title"]</h2>
<a asp-controller="Contact" asp-action="Save" id="Add">
    <i class="fas fa-plus-circle"></i> Add New Contact
</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Hospital Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="contactTableBody">
        @foreach (var contact in Model.Data)
        {
            <tr>
                <td>@contact.Id</td>
                <td>@contact.phone</td>
                <td>@contact.Email</td>
                <td>@contact.Id</td>
                <td>
                    <a asp-controller="Contact" asp-action="Details" asp-route-id="@contact.Id">
                        <i class="fas fa-info-circle" title="Details"></i>
                    </a>
                    <a asp-controller="Contact" asp-action="Save" asp-route-id="@contact.Id">
                        <i class="fas fa-edit" title="Edit"></i>
                    </a>
                    <a asp-controller="Contact" asp-action="Delete" asp-route-id="@contact.Id">
                        <i class="fas fa-trash-alt" title="Delete"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation example">
    <ul class="pagination">
        @for (int i = 1; i <= Model.pageSize; i++)
        {
            <li class="page-item @(i == Model.pageNumber ? "active" : "")">
                <a class="page-link" href="/Admin/Contact/Index?pagnumber=@i">@i</a>
            </li>
        }
    </ul>
</nav>
