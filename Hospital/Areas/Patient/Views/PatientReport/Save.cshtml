@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *,Cloudscribe.Web.Pagination

@model hospitalVm.patientreportVm
@{
    ViewData["Title"] = "Save";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-group">
    <label for="PatientName">Patient Name:</label>
    <h1>@ViewBag.patientname</h1> <!-- Display patientname in an h1 tag -->
</div>

<div class="form-group">
    <label for="doctorName">doctorName Name:</label>
    <h1>@ViewBag.doctorName</h1> <!-- Display patientname in an h1 tag -->
</div>
<div class="container">
    <form asp-controller="PatientReport" asp-action="Save" method="post">
        <input asp-for="patientid" type="hidden" id="patientid" value="@ViewBag.patientid" class="form-control">
        <input asp-for="doctorid" type="hidden" id="doctorid" value="@ViewBag.doctorid" class="form-control">
 

        <div class="form-group">
            <label asp-for="Reportdate">Patient Name:</label>
            <input asp-for="Reportdate" class="form-control" required>
            <span asp-validation-for="Reportdate" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for=" dignouses">Prescription:</label>
            <textarea asp-for="dignouses" class="form-control" rows="6" required></textarea>
            <span asp-validation-for="dignouses" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create Prescription</button>
    </form>
</div>

<a asp-controller="Apointment" asp-action="Save" asp-route-id="@ViewBag.Appiontmentvisiid" class="btn btn-sm btn-info">VistNote</a>
<a asp-area="Doctor" asp-controller="Apointment" asp-action="ConfimedApiontmentfordoctor" class="btn btn-sm btn-info"> AllBooking</a>
